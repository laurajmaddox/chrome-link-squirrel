{
    "manifest_version": 2, 

    "name": "Link Squirrel",
    "description": "Quickly save and retrieve links to read later",
    "version": "1.0.0",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png"
    },

    "permissions": [
        "activeTab",
        "contextMenus",
        "storage"    
    ],
    "browser_action": {
        "default_icon": {
            "19":"icons/icon.png", 
            "38":"icons/icon38.png"
        }
    },
    "background": {
        "scripts": ["background.min.js"],
        "persistent": false
    }
}
